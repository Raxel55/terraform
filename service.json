[
  {
    "name": "kanda",
    "image": "814517281194.dkr.ecr.us-east-1.amazonaws.com/kanda",
    "cpu": 128,
    "memory": 1024,
    "essential": true,
    "environment": [
            {"name": "WORDPRESS_DB_NAME", "value": "${local.db_name}"},
            {"name": "WORDPRESS_DB_USER", "value": "${local.db_user}"},
            {"name": "WORDPRESS_DB_PASSWORD", "value": "${local.db_password}"},
            {"name": "WORDPRESS_DB_HOST", "value": "${aws_db_instance.kanda.address}"}
        ],
    "portMappings": [
      {
        "containerPort": 80
      },
      {
        "containerPort": 443
      }
    ],
    "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "kanda",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "kanda"
                }
            }
  }
]
